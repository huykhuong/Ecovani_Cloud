<%- include('partials/staffHeader') %>
<h2 class="page-title">Add a Product</h2>
<a href="/staff/product" class="btn btn-primary">Back to all products</a>
<br><br>
<%- include('partials/messages') %>
<form action="/staff/product/add-product" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="">Title</label>
    <input type="text" class="form-control" name="title" value="<%=title%>" placeholder="Title">
  </div>
  <div class="form-group">
    <label for="">Description</label>
    <textarea id="word_count" name= "description" type="text" class="form-control" name="title" placeholder="Description"><%= description%></textarea>
    Total word count: <span id="display_count">0</span> words. Words left: <span id="word_left">53</span>
  </div>
  <div class="form-group">
    <label for="">Category</label>
    <select class="form-control" name="category">
      <% categories.forEach(function(cat){%>
        <option value="<%=cat.slug%>"><%=cat.title%></option>
      <%})%>
    </select>
  </div>
  <div class="form-group mb-5">
    <label for="">Price</label>
    <input type="number" class="form-control" name="price" value="<%=price%>" placeholder="Price">
  </div>
  <div class="form-group">
    <label for="">Not featured</label>
    <input checked class="mr-5" type="radio" id="featuredOption" name="featuredOption" value="notFeatured">
    <label for="">Featured</label>
    <input type="radio" id="featuredOption" name="featuredOption" value="featured">
  </div>
  <div class="form-group">
    <label for="">Image</label>
    <input type="file" class="form-control" name="image" id="img">
    <img src="#" id="imgPreview" alt="">
  </div>

  <button style="margin-bottom: 40px; border: 1px solid #000" class="btn btn-default" type="submit">Submit</button>
</form>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.7.2/basic.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.7.2/dropzone.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.7.2/dropzone.js"></script

<%- include('partials/staffFooter') %>
